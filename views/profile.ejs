<!doctype html>
<html>

<head>
  <title>Parks and Recreation</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style1.css">
</head>

<body>
  <section>
    <!-- <p>This Page will be where the user will post park location information and workouts into the database. 
      As well as put any changes or updates back into into the DB. The user information is displayed as well as 
      the liked workouts and liked locations.
    </p>
  </section> -->
  <div class="container">

    <div class="page-header text-center">
      <h1>User Profile Page</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6">
        <div class="well">
          <h3><span class="fa fa-user"></span> Local</h3>

          <% if (user.local.email) { %>
          <p>
            <strong>id</strong>: <%= user._id %><br>
            <strong>email</strong>: <%= user.local.email %><br>
            <strong>password</strong>: <%= user.local.password %>
          </p>

          <a href="/unlink/local" class="btn btn-default">Unlink</a>
          <% } else { %>
          <a href="/connect/local" class="btn btn-default">Connect Local</a>
          <% } %>

        </div>
      </div>
      <div class="col-sm-6">
        <h3>Messages</h3>
        <ul class="messages">
          <% for(var i=0; i< messages.length; i++) {%>
          <% if (user.local.email == messages[i].name) { %>
          <li class="message">
            <span><%= messages[i].name%></span>
            <span><%= messages[i].msg %></span>
            <span><%= messages[i].workout %></span>
            <span><%= messages[i].favorite %></span>
            <span><%= messages[i].thumbUp -= messages[i].thumbDown %></span>
            <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
            <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          </li>
          <% } %>
          <% } %>
        </ul>

        <h2>Park Information</h2>
        <% if (user.local.email) { %>
        <form action="/messages" method="POST">
          <input type="text" value="<%= user.local.email %>" name="name">
          <input type="text" placeholder="Name of Park" name="msg">
          <input type="text" placeholder="Excersise" name="workout">
          <button type="submit">Submit</button>
        </form>
        <!-- <section id="explainPost">/// Here There will be a space on the form to add 
          the information regarding the park. Including directions(for the map),photos, information, and workouts.
           All this Information will Appear on the Forum Page where others can comment on. 
        </section> -->
      </div>
      <% } %>
        <a href="/parks" class="btn btn-default"><span class="fa fa-user"></span>To Parks Forum</a>
        <!-- <a href="/map" class="btn btn-default"><span class="fa fa-user"></span>To Maps</a> -->
        <a href="/favorites" class="btn btn-default"><span class="fa fa-user"></span>To User Favorites</a>
        <a href="/map" class="btn btn-default"><span class="fa fa-user"></span>To New Map</a>
        <!-- <a href="/new-map" class="btn btn-default"><span class="fa fa-user"></span>To API Map</a> -->
        
    </div>
    <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
    <script src="main.js"></script>

</body>

</html>
