        <div class="col-sm-12 text-center" id="whiteSpace">
          <h3>Your Favorite Parks</h3>
          <h4>Click the Thumb Up Icon to Save your Favorite Jokes!</h4>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <% if(messages[i].favorite  === "Saved") {%>
            <li class="message listStyle">           
              <span><%= messages[i].name %></span>
              <span><%= messages[i].msg %></span>
              <span><%= messages[i].workout %></span>
              <span><%= messages[i].favorite %></span>
              <!-- <span><%= messages[i].file %></span> -->
              <span><%= messages[i].thumbUp %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <!-- <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
              <% if(messages[i].imgPath){ %>
                <section> 
                  <img src=<%= messages[i].imgPath %> alt="">
                </section>
               <% } %>
            </li>
            <% } %>
          <% } %>
          </ul>

          
